<assembly>
  <!-- Dependent projects will use this id as the classifier to match this assembly -->
  <id>android</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>android-project/obj/local/armeabi</directory>
      <includes>
        <include>*.*</include>
      </includes>
      <outputDirectory>obj/local/armeabi</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>android-project/obj/local/armeabi-v7a</directory>
      <includes>
        <include>*.*</include>
      </includes>
      <outputDirectory>obj/local/armeabi-v7a</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>ffmpeg</directory>
      <includes>
        <include>LICENSE</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>

